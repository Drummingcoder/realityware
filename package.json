{
	"name": "realityware",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"preinstall": "npx only-allow@1.2.2 bun",
    "dev": "turbo dev",
		"build": "turbo build",
		"start": "turbo start",
		"lint": "turbo lint",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"web:dev": "turbo dev --filter=web",
		"web:build": "turbo build --filter=web",
		"web:start": "turbo start --filter=web",
		"backend:dev": "turbo dev --filter=backend",
		"backend:build": "turbo build --filter=backend",
		"backend:start": "turbo start --filter=backend",
		"db:generate": "cd packages/db && bun run db:generate",
		"db:push": "cd packages/db && bun run db:push",
		"db:migrate": "cd packages/db && bun run db:migrate",
		"db:studio": "cd packages/db && bun run db:studio"
	},
	"packageManager": "bun@1.3.5",
  "devDependencies": {
    "turbo": "latest"
  }
}

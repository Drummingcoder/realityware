{
  "name": "realityware",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "start": "cd apps/web && bun run start",
    "lint": "turbo lint",
    "check-types": "turbo check-types",
    "test": "turbo test",
    "db:generate": "cd packages/db && bun run db:generate",
    "db:push": "cd packages/db && bun run db:push",
    "db:migrate": "cd packages/db && bun run db:migrate",
    "db:studio": "cd packages/db && bun run db:studio"
  },
  "devDependencies": {
    "turbo": "latest"
  }
}
